@model TestVueWebApp.Repository.Models.Request

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавление новой записи</h1>

<h4>Заявки на ремонт</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountCd" class="control-label">Лицевой счет</label>
                <select asp-for="AccountCd" class ="form-control" asp-items="ViewBag.AccountCd"></select>
            </div>
            <div class="form-group">
                <label asp-for="FailureCd" class="control-label">Наименование причины заявки</label>
                <select asp-for="FailureCd" class ="form-control" asp-items="ViewBag.FailureCd"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExecutorCd" class="control-label">Исполнитель заявки</label>
                <select asp-for="ExecutorCd" class ="form-control" asp-items="ViewBag.ExecutorCd"></select>
            </div>
            <div class="form-group">
                <label asp-for="IncomingDate" class="control-label">Дата поступления заявки</label>
                <input asp-for="IncomingDate" class="form-control" />
                <span asp-validation-for="IncomingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExecutionDate" class="control-label">Дата выполнения заявки</label>
                <input asp-for="ExecutionDate" class="form-control" />
                <span asp-validation-for="ExecutionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Executed" /> Признак погашения заявки
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
