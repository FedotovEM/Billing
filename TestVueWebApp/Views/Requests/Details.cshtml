@model TestVueWebApp.Repository.Models.Request

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Заявки на ремонт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Дата поступления заявки</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IncomingDate)
        </dd>
        <dt class = "col-sm-2">Дата выполнения заявки</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExecutionDate)
        </dd>
        <dt class = "col-sm-2">Признак погашения заявки</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Executed)
        </dd>
        <dt class = "col-sm-2">Лицевой счет</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountCdNavigation.AccountCd)
        </dd>
        <dt class = "col-sm-2">Исполнитель заявки</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExecutorCdNavigation.Fio)
        </dd>
        <dt class = "col-sm-2">Наименование причины заявки</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FailureCdNavigation.FailureName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RequestCd">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
