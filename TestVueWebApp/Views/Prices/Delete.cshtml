@model TestVueWebApp.Repository.Models.Price

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Цены</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Стоимость</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceValue)
        </dd>
        <dt class = "col-sm-2">Наименование режима потребления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModeCdNavigation.ModeName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PriceCd" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
