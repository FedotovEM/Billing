@model TestVueWebApp.Repository.Models.Price

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Цены</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Стоимость</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceValue)
        </dd>
        <dt class = "col-sm-2">Наименование режима потребления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModeCdNavigation.ModeName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PriceCd">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
