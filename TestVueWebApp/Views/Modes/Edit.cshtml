@model TestVueWebApp.Repository.Models.Mode

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>Режимы потребления</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModeCd" />
            <div class="form-group">
                <label asp-for="ModeName" class="control-label">Наименование режима потребеления</label>
                <input asp-for="ModeName" class="form-control" />
                <span asp-validation-for="ModeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Norma" class="control-label">Нормативный объем коммунального ресурса</label>
                <input asp-for="Norma" class="form-control" />
                <span asp-validation-for="Norma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceCd" class="control-label">Наименование предоставляемой услуги</label>
                <select asp-for="ServiceCd" class="form-control" asp-items="ViewBag.ServiceCd"></select>
                <span asp-validation-for="ServiceCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
