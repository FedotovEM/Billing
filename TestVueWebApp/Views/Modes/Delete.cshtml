@model TestVueWebApp.Repository.Models.Mode

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Режимы потребления</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Наименование режима потребеления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModeName)
        </dd>
        <dt class = "col-sm-2">Нормативный объем коммунального ресурса</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Norma)
        </dd>
        <dt class = "col-sm-2">Наименование предоставляемой услуги</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceCdNavigation.ServiceName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ModeCd" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
