@model TestVueWebApp.Repository.Models.AbonentMode

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавление новой записи</h1>

<h4>Режим потребления абонента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountCd" class="control-label">Лицевой счет</label>
                <select asp-for="AccountCd" class ="form-control" asp-items="ViewBag.AccountCd"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModeCd" class="control-label">Режим потребления</label>
                <select asp-for="ModeCd" class ="form-control" asp-items="ViewBag.ModeCd"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Counterr" /> Наличие счётчика
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
