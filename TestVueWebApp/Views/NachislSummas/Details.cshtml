@model TestVueWebApp.Repository.Models.NachislSumma

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Начисление</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Сумма начисления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NachislSum)
        </dd>
        <dt class = "col-sm-2">Год начисления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NachislYear)
        </dd>
        <dt class = "col-sm-2">Месяц начисления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NachislMonth)
        </dd>
        <dt class = "col-sm-2">Тип начисления</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NachType)
        </dd>
        <dt class = "col-sm-2">Количество потребленного ресурса за месяц</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountResources)
        </dd>
        <dt class = "col-sm-2">Лицевой счет</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AbonentModeСdNavigation.AccountCd)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.NachislFactCd">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
