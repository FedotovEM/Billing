@model TestVueWebApp.Repository.Models.PaySumma

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Оплата</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Сумма оплаты</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaySum)
        </dd>
        <dt class = "col-sm-2">Дата оплаты</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayDate)
        </dd>
        <dt class = "col-sm-2">Номер оплачиваемого месяца</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayMonth)
        </dd>
        <dt class = "col-sm-2">Оплачиваемый год</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayYear)
        </dd>
        <dt class = "col-sm-2">Тип оплаты</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayType)
        </dd>
        <dt class = "col-sm-2">Лицевой счет</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AbonentModeСdNavigation.AccountCd)
        </dd class>
        <dt class = "col-sm-2">Код пункта приема платежей</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReceptionPointCdNavigation.ReceptionName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PayFactCd" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
