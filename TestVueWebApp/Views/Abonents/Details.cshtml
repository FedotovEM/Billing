            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">Корпус</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Сorpus)
        </dd>
        <dt class = "col-sm-2">Район</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.District)
        </dd>
        <dt class = "col-sm-2">Количество жильцов</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountPerson)
        </dd>
        <dt class = "col-sm-2">Размер квартиры</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeFlat)
        </dd>
