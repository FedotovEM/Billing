@model TestVueWebApp.Repository.Models.Street

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Улица</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Наименование улицы</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StreetCd">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts{
    <script src="@Url.Content("~/bundle/streets.js")"></script>
}

