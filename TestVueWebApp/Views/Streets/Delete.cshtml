@model TestVueWebApp.Repository.Models.Street

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Улица</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Наименование улицы</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StreetCd" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>

