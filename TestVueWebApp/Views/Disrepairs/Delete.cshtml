@model TestVueWebApp.Repository.Models.Disrepair

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Неисправность</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Наименование неисправности</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FailureName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FailureCd" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
