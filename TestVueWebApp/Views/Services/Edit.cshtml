@model TestVueWebApp.Repository.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменение</h1>

<h4>Предоставляемые услуги</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceCd" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label">Наименование предоставляемой услуги</label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsCd" class="control-label">Единица измерения</label>
                <select asp-for="UnitsCd" class="form-control" asp-items="ViewBag.UnitsCd"></select>
                <span asp-validation-for="UnitsCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
